.tab-bar {
	position: absolute;
	bottom: 0;
	left: 0;
	right: 0;
	height: 80px;
	background: white;
	display: flex;
	flex-direction: row;
	padding-bottom: env(safe-area-inset-bottom);
	pointer-events: auto;
	border-top: 1px solid #e6e6e6;
	box-shadow: 0px 0px 12px rgba(0, 0, 0, 0.05);
}

.tab-bar-item {
	flex: 1;
	text-align: center;
	display: flex;
	justify-content: center;
	align-items: center;
	flex-direction: column;
}

.tab-bar-item .image {
	width: 27px;
	height: 27px;
}

.tab-bar-item view {
	font-size: 10px;
	margin-top: 2px;
}

.bulge {
	background-color: #FFF;
}

.bulge .tab-bar-bulge {
	position: absolute;
	width: 66px;
	height: 66px;
	top: -18px;
	border-radius: 50%;
	background: #fff;
	z-index: -1;
	border-top: 1px solid #e6e6e6;
	box-shadow: 0px 0px 12px rgba(0, 0, 0, 0.05);
}

.bulge .image {
	position: absolute;
	width: 50px;
	height: 31px;
	/* top: -15px; */
	border: 5px solid #fff;
	/* border-radius: 50%; */
}